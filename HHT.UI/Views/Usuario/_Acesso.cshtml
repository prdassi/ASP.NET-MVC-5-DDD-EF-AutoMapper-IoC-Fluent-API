@model HHT.UI.ViewModels.PerfilViewModel

<div class="modal-header">
    <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><span class="mdi mdi-close"></span></button>
    <h3 class="modal-title">Perfil de Acesso</h3>
</div>

<div class="form-group xs-mt-10">
    @Html.Label("Acesso", htmlAttributes: new { @class = "col-sm-3 control-label" })
    <div class="col-sm-9">
        @Html.DropDownList("PerfilId", ViewBag.Acesso as SelectList, "-- Selecione --", new { @class = "form-control input-xs", required = "required" })        
    </div>
</div>

<div class="modal-footer xs-mr-15">
    <button type="button" data-dismiss="modal" class="btn btn-default md-close">Cancelar</button>
    <button type="button" id="btnAlterar" class="btn btn-primary md-close" ">Confirmar</button>
</div>
