@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="Indra Company" content="">
    <link rel="shortcut icon" href="@Url.Content("~/Content/Images/aes-fav.png")" />
    <title>AES Tiete</title>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @Styles.Render("~/Content/css")
</head>
<body class="be-splash-screen">
    <div class="be-wrapper be-login">
        <div class="be-content">
            <div class="main-content container-fluid">
                <div class="splash-container">
                    <div class="panel panel-default panel-border-color panel-border-color-primary">
                        <div class="panel-heading">
                            <img src="@Url.Content("~/Content/Images/logo.png")" alt="logo" width="170" height="60" class="logo-img">
                            <span class="splash-description">HHT - Contratadas e Contratados</span>
                        </div>
                        <div class="panel-body">
                            @{Html.RenderPartial("_Mensagem");}
                            @using (Html.BeginForm("Login", "Account"))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control input-xs", type = "text", placeholder = "E-mail", autocomplete = "off" } })
                                </div>
                                <div class="form-group">
                                    @Html.Editor("Password", new { htmlAttributes = new { @class = "form-control input-xs", type = "password", placeholder = "Senha" } })
                                </div>
                                <div class="form-group login-submit">
                                    <button data-dismiss="modal" type="submit" class="btn btn-primary btn-xl">Entrar</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/javascripts")
</body>
</html>




